# ============================================================
# WealthSync Backend — Environment Configuration
# ============================================================
# Copy this file to .env in the backend/ directory:
#   cp .env.example .env
# ============================================================

# ── App ─────────────────────────────────────────────────────
PROJECT_NAME=WealthSync
API_V1_STR=/api/v1
ENVIRONMENT=development                   # development | production
DEBUG=False
ENABLE_DOCS=True                           # Expose /docs Swagger UI
AUTO_CREATE_TABLES=True                    # False in production (use Alembic)

# ── Security ────────────────────────────────────────────────
# REQUIRED — Generate: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-to-a-random-64-char-hex-string

ACCESS_TOKEN_EXPIRE_MINUTES=11520          # 8 days
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_SIGNUP=3/minute

# ── Database ────────────────────────────────────────────────
# Option A: Individual parts (used when DATABASE_URL is empty)
POSTGRES_SERVER=localhost                  # "db" in Docker Compose
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=wealth_sync

# Option B: Full URL (overrides individual parts when set)
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost/wealth_sync
#   └─ For Supabase: use ssl=require, URL-encode special chars in password

DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ── CORS ────────────────────────────────────────────────────
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
ALLOWED_HOSTS=[]

# ── Optional Services ──────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
SENTRY_DSN=
