# Copy this file to `.env.prod` before running production mode:
#   cp .env.prod.example .env.prod
#
# Then run:
#   docker compose -f docker-compose.prod.yml --env-file .env.prod up -d --build

SECRET_KEY=replace-with-a-long-random-secret
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db/wealth_sync
REDIS_URL=redis://redis:6379/0

# JSON arrays expected by backend config
BACKEND_CORS_ORIGINS=["https://your-frontend-domain.com"]
ALLOWED_HOSTS=["your-api-domain.com"]

# Frontend build-time API URL
VITE_API_BASE_URL=https://your-api-domain.com/api/v1
