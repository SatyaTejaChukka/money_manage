# Backend (FastAPI)
PROJECT_NAME=WealthSync
API_V1_STR=/api/v1
ENVIRONMENT=development
DEBUG=false
ENABLE_DOCS=true
AUTO_CREATE_TABLES=true
SECRET_KEY=change-me-please
ACCESS_TOKEN_EXPIRE_MINUTES=11520
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_SIGNUP=3/minute

# CORS / Hosts (comma-separated or JSON list)
BACKEND_CORS_ORIGINS=http://localhost:5173
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (prefer DATABASE_URL in production)
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=wealth_sync
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost/wealth_sync
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Optional monitoring
SENTRY_DSN=

# Redis (optional, for Celery)
REDIS_URL=redis://localhost:6379/0

# Frontend (Vite)
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_ENVIRONMENT=development
